<Window x:Class="FE_Berechnungen.Wärmeberechnung.ModelldatenLesen.ZeitAnregungDatei"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Anregungsfunktion in Datei diskretisieren" Height="320" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,74">
            Diskretisierung einer Sinus-Anregungsfunktion in eine Datei
        </Label>
        <Label Grid.Row="0" Grid.Column="0" Margin="0,24,0,51">Amplitude:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Name="Amplitude" Margin="20,25,0,0" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <Label Grid.Row="0" Grid.Column="0" Margin="0,49,0,25">Frequenz:</Label>
        <TextBox Name="Frequenz" Grid.Row="0" Grid.Column="1" Margin="20,51,0,0" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <Label Grid.Row="0" Grid.Column="0" Margin="0,74,0,2">Phasenwinkel:</Label>
        <TextBox Name="Phasenwinkel" Grid.Row="0" Grid.Column="1" Margin="20,77,0,0" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,76">
            Eingabe der Maximalzeit Tmax und des Zeitschritts deltaT
        </Label>
        <Label Grid.Row="1" Grid.Column="0" Margin="0,30,0,45">Maximalzeit Tmax:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="Tmax" Margin="20,35,0,0" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <Label Grid.Row="1" Grid.Column="0" Margin="0,67,0,7">Zeitschritt deltaT:</Label>
        <TextBox Name="DeltaT" Grid.Row="1" Grid.Column="1" Margin="20,60,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="60"/>
        <Label Grid.Row="2" Grid.Column="0" Margin="0,5,0,7">Name der Datei:</Label>
        <TextBox Name="Dateiname" Grid.Row="2" Grid.Column="1" Margin="20,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="115"/>
        <Button Grid.Row="3" Grid.Column="1" IsDefault="True" Width="35" Height="26" Margin="65,0,0,0"
                Click="BtnDialogOk_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
            _Ok
        </Button>
    </Grid>
</Window>
